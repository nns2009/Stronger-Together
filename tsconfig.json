{
	"compilerOptions": {
		"lib": ["es5", "es6", "dom"],
		"outDir": "./dist/",
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"module": "es6",
		"moduleResolution": "node",
		"target": "es2020",
		"allowJs": true,
	},
	"include": [
		"./src/**/*"
	]
}